generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id            Int                 @id @default(autoincrement())
  username      String              @unique
  password      String      
  createdAt     DateTime            @default(now())
  Files         File[]      
}

model File{
  id               String           @id @default(uuid())
  originalname     String      
  owner            User             @relation(fields: [ownerid],references: [id])
  ownerid          Int
  mimeTypw         String?
  isPrivate        Boolean          @default(false)
  latestId         String?          @unique
  latest           FileVersion?     @relation("latestVersion",fields: [latestId],references: [id])
  versions         FileVersion[]    @relation("FileVersions")
  @@unique([originalname,ownerid])
}

model FileVersion{
  id              String            @id @default(uuid())
  fileId          String
  version         Int
  s3Key           String            @unique
  createdAt       DateTime          @default(now())
  file            File              @relation("FileVersions",fields: [fileId],references: [id],onDelete: Cascade)
  latest          File?             @relation("latestVersion")
  @@unique([fileId,version])
}

model pendingDelete{
  id              String            @id @default(uuid())
  s3Key           String            @unique
  attempts        Int               @default(0)
  createdAt       DateTime          @default(now())
}